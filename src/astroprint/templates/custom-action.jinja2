

<div class="content">
  {# ============== CUSTOM APP ==============#}
  <div id="custom-action-app-container" class="small-12 large-12 columns">
    <div class=" bold row text-center" id="no-found-action" style="display:none">No action was found with that ID
      <div class="blink-animation">Redirecting...</div>
      <img src="static/img/sadmonkey-2.png" alt="no-action icon">
    </div>
    <div class="custom-action-app"></div>
  </div>

  <script type="text/template" id="custom-action-app-template">
    <div class="row large-collapse">
        <div class="small-12 columns title-heading">
          <h1 class="bold"><%= customActionApp.strings.en.name %></h1>
        </div>
      </div>
      <div class="row">
      <div class="row">
        <div id="title-app" class="small-10 columns text-center"><%= customActionApp.steps[currentStep-1].strings.en.title %></div>
        <div class="small-2 columns text-right">Step <span id="step-counter" ><%= currentStep %>/<%= customActionApp.steps.length %></span></div>
      </div>

      <div id="img-app" class="row">
        <img src="/static/img/variant/<%= customActionApp.steps[currentStep-1].img_filename %>"  class="small-12 columns text-center">
      </div>

      <div class="row text-center">
        <p><%= customActionApp.steps[currentStep-1].strings.en.description %></p>
      </div>

      <div class="row buttons text-center" >
        <div class="small-12 large-6  columns" >
          <button class="alert radius tiny bold close">Close</button>
        </div>
        <div class="small-12 large-6  columns" >
          <button class="alert radius tiny bold next"><%= customActionApp.steps[currentStep-1].strings.en.button %></button>
        </div>
      </div>
    </div>
  </script>
</div>
